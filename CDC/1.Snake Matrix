
package day1;

import java.util.Scanner;

public class practice {
public static void main(String[]args) {
	Scanner sc =new Scanner(System.in);
	int row =3;
	int col =3;
	int arr[][]= {{1,2,3},{4,5,6},{7,8,9}};

	int toprow=0,bottomrow =arr.length,leftcol=0,rightcol=arr[0].length;
	int maxsize=bottomrow*rightcol;
	System.out.println(maxsize);
	int count=0;
	while(count<maxsize ) {
		
	for(int i=leftcol;i<rightcol&&count<maxsize;i++) {
		System.out.print(arr[toprow][i]+" ");
		
		count++;
	}
	toprow++;
	for(int i=rightcol-1;i>=leftcol&&count<maxsize;i--) {
		System.out.print(arr[toprow][i]+" ");
		count++;
		
	}
	toprow++;
	
	if(toprow>bottomrow) {
		break;
	}
	}
	

}


}


