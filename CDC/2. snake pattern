
  {1,2,3},
	{4,5,6},
	{7,8,9}}

package day1;

import java.util.Scanner;

public class practice {
public static void main(String[]args) {
	Scanner sc =new Scanner(System.in);
	int row =3;
	int col =3;
	int arr[][]= {
	{1,2,3},
	{4,5,6},
	{7,8,9}};

	int toprow=0,bottomrow =arr.length,leftcol=0,rightcol=arr[0].length;
	int maxsize=bottomrow*rightcol;
	System.out.println(maxsize);
	int count=0;
	while(count<maxsize &&leftcol<rightcol) {
		
	for(int i=toprow;i<bottomrow&&count<maxsize;i++) {
		System.out.print(arr[i][leftcol]+" ");
		count++;
	}
	leftcol++;
	for(int i=bottomrow-1;i>=toprow&&count<maxsize;i--) {
		System.out.print(arr[i][leftcol]+" ");
		count++;
	}
	
	if(leftcol>rightcol) {
		break;
	}
	leftcol++;
	}
	

}


}


OUTPUT
9
1 4 7 8 5 2 3 6 9 
