public class day14copy {
    public static void main(String[] args) {
        int n =3;
        int i=1;
        int nst=1;
        int nsp =n-1;
        int val=1;

        while(i<=2*n-1){
            int csp=0;
            while(csp<nsp){
                System.out.print("  ");
                csp++;
            }
            int cst =0;
            val = i <= n ? i : (2 * n - i); 
            while (cst<nst) {
             System.out.print(val+" ");
             cst++;
             val++;
             
                
            }
            val--;
        cst=0;
        while (cst<nst-1) {
            val--;
            System.out.print(val + " ");
            cst++;
            
        }
        if(i>=n){
            System.out.println();
            nst--;
            nsp++;
            i++;
            
         }
         else{
            System.out.println();
            i++;
                nst++;
                nsp--;
         }
    }
}
    }

