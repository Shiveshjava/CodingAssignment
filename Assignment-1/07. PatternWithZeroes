1 
2 2 
3 0 3 
4 0 0 4 
5 0 0 0 5
import java.util.Scanner;
public class day14PatternWithZeroes {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
        int i =1;
        int nst=1;
        int val=1;
        while(i<=n){
            int cst=0;
            while (cst<nst) {
                if(cst==0||cst==nst-1){
                System.out.print(val+" ");
                cst++;
                }
                else{
                    System.out.print("0 ");
                cst++;
                }
                
            }
            System.out.println();
            nst++;
            i++;
            val++;
        }
    }
}
