import java.util.Scanner;   
public class patternsss {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.println("Enter the number of rows (odd): ");
        int n = sc.nextInt();   
        
        int i=1;
        int nst=1;
        int nsp =n/2;
        while(i<=n){
            int csp=0;
            while(csp<nsp){
                System.out.print("  ");
                csp++;
            }
            int cst =0;
            while (cst<nst) {
                System.out.print("* ");
                cst++;
            }if (i>n/2) {
                i++;
                System.out.println();
                nst-=2;
                nsp++;
                
            }
            else{
            System.out.println();
            i++;
                nst+=2;
                nsp--;
        }
        }
    }
    }
