import java.util.Scanner;   
public class patternsss {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.err.println("Enter the number of rows(odd number)");
        int n =sc.nextInt();
        int i=1;
        int nst1= n/2  +1;
        int nst2 = n/2 ;
        int nsp =0;
        while(i<=n){
            int cst =0;
            while(cst<nst1){
                System.out.print("* ");
                cst++;

            }
            int csp =0;
            while(csp<nsp){
                System.out.print("  ");
                csp++;

            }
           cst =0;
            while(cst<=nst2){
                System.out.print("* ");
                cst++;

            }

            if(i>n/2){
                System.out.println(); 

                i++;
                nst1++;
                nst2++;
                nsp-=2;

            }
           else{ System.out.println();
            i++;
            nst1 --;
            nst2--;
            nsp+=2;
           }
            
        }
    }
    }
