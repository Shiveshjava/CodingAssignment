public class day13_hollowdiamind {
    public static void main(String[] args) {
        int n =5;
        int i=1;
        int nst1= 3;
        int nst2 =3;
        int nsp =0;
        while(i<=n){
            int cst =0;
            while(cst<nst1){
                System.out.print("* ");
                cst++;

            }
            int csp =0;
            while(csp<nsp){
                System.out.print("  ");
                csp++;

            }
           cst =0;
            while(cst<nst2){
                System.out.print("* ");
                cst++;

            }

            if(i==3 || i==4||i==5){
                System.out.println();
                i++;
                nst1++;
                nst2++;
                nsp-=2;

            }
           else{ System.out.println();
            i++;
            nst1 --;
            nst2--;
            nsp+=2;
           }
            
        }
    }
    
}
